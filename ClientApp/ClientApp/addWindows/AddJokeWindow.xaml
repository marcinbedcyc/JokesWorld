<Window x:Class="ClientApp.addWindows.AddJokeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp.addWindows"
        mc:Ignorable="d"
        Title="AddJokeWindow" ResizeMode="NoResize" Height="500" Width="300">
    <WrapPanel Margin="15,20,15,20" x:Name="ScrollContentWrapPanel" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Label x:Name="TitleLabel"  Content="Tytuł:" Margin="0,0,10,10"></Label>
        <TextBox x:Name="TitleTextBox" Width="150" Margin="20,0,20,10" ></TextBox>
        <Label x:Name="ContenLabel" Height="75" Content="Content:" Margin="0,0,10,10"></Label>
        <TextBox x:Name="ContentTextBox" Width="150" Margin="2,0,10,10" ></TextBox>
        <Button x:Name="AddButton"  Cursor="Hand" Width="75" Height="30" Content="Dodaj" Margin="40,0,10,10" Background="#CC04126C" Foreground="White" FontWeight="Bold" Click="AddButton_Click"></Button>
        <Button x:Name="CancelButton" Cursor="Hand" Width="75" Height="30" Content="Anuluj" Margin="10,0,40,10" Background="#CCDE3333" Foreground="White" FontWeight="Bold" Click="CancelButton_Click" />
        <Label Margin="0,0,1000,0"></Label>
    </WrapPanel>
</Window>
